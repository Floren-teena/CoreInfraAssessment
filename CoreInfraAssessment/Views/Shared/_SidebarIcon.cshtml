<script>
    function toggleSidebar() {
        var fullSidebar = document.getElementById('sidebar-full');
        var iconSidebar = document.getElementById('sidebar-icon');

        if (fullSidebar && iconSidebar) {
            if (fullSidebar.classList.contains('hidden')) {
                // Show full sidebar and hide icon sidebar
                fullSidebar.classList.remove('hidden');
                iconSidebar.classList.add('hidden');
            } else {
                // Show icon sidebar and hide full sidebar
                fullSidebar.classList.add('hidden');
                iconSidebar.classList.remove('hidden');
            }
        }
    }
</script>